<h1 class="text-center my-4">Carrito de Compras</h1>

{{#if cart.products.length}}
  <table class="table">
      <thead>
          <tr>
              <th>Producto</th>
              <th>Precio</th>
              <th>Cantidad</th>
              <th>Subtotal</th>
              <th>Acciones</th>
          </tr>
      </thead>
      <tbody>
          {{#each cart.products}}
          <tr>
              <td>{{this.productId.name}}</td>
              <td>${{this.productId.price}}</td>
              <td>{{this.quantity}}</td>
              <td>${{multiply this.productId.price this.quantity}}</td>
<td>
  {{#if (gt this.quantity 1)}}
    <button class="btn btn-sm btn-outline-danger decrease-quantity" data-product-id="{{this.productId._id}}">
      Eliminar 1 unidad
    </button>
  {{/if}}
  
  <button class="btn btn-danger remove-from-cart" data-product-id="{{this.productId._id}}">
    Eliminar
  </button>
</td>

          </tr>
          {{/each}}
      </tbody>
  </table>

  <button class="btn btn-warning" id="clearCart">Vaciar Carrito</button>

{{else}}
  <p class="text-center">El carrito está vacío</p>
{{/if}}

<a href="/" class="btn btn-primary mt-3">Seguir Comprando</a>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>
